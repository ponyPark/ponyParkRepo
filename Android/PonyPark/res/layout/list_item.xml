<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/garageLRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/garageLRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garageLRating"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/garageName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:maxWidth="120dp"
        android:paddingLeft="8dp"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/garageAddress"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/garageName"
        android:layout_below="@id/garageName"
        android:maxLines="1"
        android:maxWidth="120dp"
        android:paddingLeft="8dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/garageDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="17sp" />

</RelativeLayout>